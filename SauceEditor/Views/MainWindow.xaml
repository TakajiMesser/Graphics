    <Window.InputBindings>
        <KeyBinding Command="{Binding Path=Menu/NewProjectCommand}" Key="N" Modifiers="Ctrl"/>
        <KeyBinding Command="{Binding Path=Menu/OpenProjectCommand}" Key="O" Modifiers="Ctrl"/>
    </Window.InputBindings>
    <DockPanel>
        <controls:MainMenu x:Name="Menu" DockPanel.Dock="Top" 
            MapOpened="Menu_MapOpened"
            ProjectOpened="Menu_ProjectOpened"
            ModelOpened="Menu_ModelOpened"
            BehaviorOpened="Menu_BehaviorOpened"
            UndoCalled="Menu_UndoCalled"
            RedoCalled="Menu_RedoCalled"/>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Name="UndoButton" Command="Undo" Content="Undo" Click="UndoButton_Click"/>
                <Button Name="RedoButton" Command="Redo" Content="Redo" Click="RedoButton_Click"/>
                <Button Name="PlayButton" Content="Play" Click="PlayButton_Click" Visibility="Hidden"/>
            </ToolBar>
        </ToolBarTray>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <xcad:DockingManager Name ="ToolDockingManager" Grid.Column="0"/>
            <xcad:DockingManager Name ="MainDockingManager" Grid.Column="1"/>
            <xcad:DockingManager Name ="SideDockingManager" Grid.Column="2"/>
        </Grid>
    </DockPanel>
