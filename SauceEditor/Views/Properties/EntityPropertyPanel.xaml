        Title="Properties">
    <xctk:PropertyGrid x:Name="PropertyGrid" Margin="4" SelectedObject="{Binding}" AutoGenerateProperties="True">
        <!--<xctk:PropertyGrid.Resources>
            <vm:NullVisibilityConverter x:Key="NullVisibilityConverter"/>
        </xctk:PropertyGrid.Resources>-->
        <xctk:PropertyGrid.DataContext>
            <vm:EntityProperties x:Name="ViewModel"/>
        </xctk:PropertyGrid.DataContext>
        <xctk:PropertyGrid.EditorDefinitions>
            <xctk:EditorDefinition>
                <xctk:EditorDefinition.PropertiesDefinitions>
                    <xctk:PropertyDefinition TargetProperties="ID" />
                    <xctk:PropertyDefinition TargetProperties="Name" />
                </xctk:EditorDefinition.PropertiesDefinitions>
                <xctk:EditorDefinition.EditorTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Value}" />
                    </DataTemplate>
                </xctk:EditorDefinition.EditorTemplate>
            </xctk:EditorDefinition>
        </xctk:PropertyGrid.EditorDefinitions>

        <!--[Obsolete("Use 'TargetProperties' instead of 'Name'")]
