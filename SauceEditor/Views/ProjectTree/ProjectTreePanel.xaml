                </ContextMenu>
                <ContextMenu x:Key="BehaviorsMenu">
                    <MenuItem Header="Add Behavior" Command="{StaticResource AddBehaviorCommand}"/>
                </ContextMenu>
                <ContextMenu x:Key="TexturesMenu">
                    <MenuItem Header="Add Texture" Command="{StaticResource AddTextureCommand}"/>
