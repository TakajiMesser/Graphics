        xmlns:xcad="http://schemas.xceed.com/wpf/xaml/avalondock"
        mc:Ignorable="d"
        Title="Project Tree">
    <StackPanel Name="Panel" Orientation="Vertical">
        <StackPanel.DataContext>
            <vm:ProjectTreePanelViewModel x:Name="ViewModel"/>
        </StackPanel.DataContext>
